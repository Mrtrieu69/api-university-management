datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id           Int       @id @default(autoincrement())
    username     String    @unique
    password     String
    type         String
    access_token String?
    student      Student?  @relation(fields: [student_id], references: [id])
    student_id   Int?      @unique
    employee     Employee? @relation(fields: [employee_id], references: [id])
    employee_id  Int?      @unique
}

model Student {
    id          Int       @id @default(autoincrement())
    lastname    String?
    surname     String?
    name        String
    birthday    DateTime?
    sex         String?
    User        User?
    programm    Programm  @relation(fields: [programm_id], references: [id])
    programm_id Int
    Grade       Grade[]
}

model Programm {
    id          Int       @id @default(autoincrement())
    title       String
    description String?
    code        String
    Student     Student[]
    Subject     Subject[]
}

model Subject {
    id          Int      @id @default(autoincrement())
    title       String
    duration    Int
    description String?
    programm    Programm @relation(fields: [programm_id], references: [id])
    programm_id Int
    Class       Class[]
}

model Employee {
    id            Int     @id @default(autoincrement())
    lastname      String?
    surname       String?
    name          String
    salary        String?
    sex           String?
    type_employee String
    Class         Class[]
    User          User?
}

model Class {
    id             Int      @id @default(autoincrement())
    year           String   @default("2024")
    semester       String   @default("2")
    langue         String   @default("Русский")
    type_control   String
    date_control   DateTime
    limit_students Int
    schedule       String
    subject        Subject  @relation(fields: [subject_id], references: [id])
    subject_id     Int
    employee       Employee @relation(fields: [employee_id], references: [id])
    employee_id    Int
    Grade          Grade[]
}

model Grade {
    id         Int     @id @default(autoincrement())
    class      Class   @relation(fields: [class_id], references: [id])
    class_id   Int
    student    Student @relation(fields: [student_id], references: [id])
    student_id Int
    grade      Int
}
